<Window x:Class="NPGui.NamedPipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NPGui"
        xmlns:dc="clr-namespace:NPGui.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="486" Width="923"
        ResizeMode="CanResize">
    <Grid>
        <Button x:Name="loadButton" Content="Load from Pipe" Click="loadButton_Click" HorizontalAlignment="Left" Margin="346,33,0,0" VerticalAlignment="Top" Width="123" Height="36" />
        <Button x:Name="processButton" Content="Process" Click="processButton_Click" HorizontalAlignment="Left" Margin="346,96,0,0" VerticalAlignment="Top" Width="123" Height="35"/>
        <TabControl x:Name="imageTabsControl">
            <TabItem Header="imageTab1">
                <Grid Background="#FFE5E5E5" >
                    <dc:NImageControl />
                </Grid>
            </TabItem>
            <TabItem Header="imageTab2">
                <Grid Background="#FFE5E5E5" >
                    <dc:NImageControl />
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
