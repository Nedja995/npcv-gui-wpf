<UserControl x:Class="NPGui.Controls.ImageWorkspaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPGui.Controls.Images"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TabControl x:Name="imageTabsControl">
            <TabItem Header="Original">
                <local:ImageNpcvControl x:Name="OriginalImage" />
            </TabItem>
            <TabItem Header="Fitlered">
                <local:ImageMatrixControl x:Name="image"/>
                
            </TabItem>
            
        </TabControl>
    </Grid>
</UserControl>
